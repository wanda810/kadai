<?php

//課題1
$name = 'yanagisawa';

if($name == 'yanagisawa')
{
  print '私は'.$name.'です。';
}
else
{
  print 'あなたの名前ではありません。';
}

//課題2

$total = 0;
for($i = 1;$i <= 10000;$i++)
{
  $total +=$i;
}
echo $total;

//課題3
$fruit = ['apple','lemon','peach','banana','kaki'];

foreach($fruit as $data)
{
  echo $data;
}

//課題4

$start = 1;
$end = 100;

for($i = $start; $i <= $end; $i++)
{
  if($i % 5 == 0)
  {
    echo $i;
  }
}
 ?>
